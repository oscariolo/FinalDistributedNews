# Etapa 1: Construcción
FROM node:20-alpine AS builder

# Define los build arguments
ARG VITE_GOOGLE_CLIENT_ID
ARG VITE_API_URL

# Define variables de entorno con esos args
ENV VITE_GOOGLE_CLIENT_ID=${VITE_GOOGLE_CLIENT_ID}
ENV VITE_API_URL=${VITE_API_URL}

# Crea directorio de trabajo
WORKDIR /app

# Copia solo dependencias primero
COPY package*.json ./

# Instala dependencias
RUN npm install

# Copia el resto del código
COPY . .

# Genera build de producción con las variables de entorno ya definidas
RUN npm run build

# Etapa 2: Servir con Nginx
FROM nginx:alpine

# Copia build de Vite a la carpeta pública de Nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# Copia configuración personalizada de Nginx (opcional, si usas React Router)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expone el puerto HTTP
EXPOSE 80

# Arranca Nginx
CMD ["nginx", "-g", "daemon off;"]
